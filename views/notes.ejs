<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <!-- header -->
      <div class="flex flex-row justify-evenly items-center mt-8">

        <h1 class="text-2xl font-semibold">All NotesðŸ§¾</h1>

        <button class="border bg-black text-white px-6 py-2">
          <a href="/createNote">Add Note</a>
        </button>      
     
      </div>     
 
<!-- contents section -->
    <div class="flex flex-row justify-center items-center">
        <div class="flex flex-row flex-wrap justify-center items-center">
          <% notes.forEach(note => { %>
            <div class="w-[450px] h-auto p-4 flex flex-col justify-start items-start text-start border m-3">
              <h2 class="text-lg text-gray-800 font-bold w-full line-clamp-2"><%= note.title %></h2>
              <p class="text-sm text-gray-600 w-full line-clamp-4"><%= note.contents.substring(0, 150) %>...</p>
              <p class="text-xs w-full mt-2"><%= note.timestamp %></p>

                  <a href="/notes/<%= note.id %>" class="text-blue-500 mt-4 text-sm">View More</a>
            </div>
          <% }) %>
        </div>
      </div>
      
      


</body>
</html>